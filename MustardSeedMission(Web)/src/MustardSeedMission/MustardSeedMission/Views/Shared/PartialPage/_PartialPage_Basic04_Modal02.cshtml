@using MustardSeedMission.Models
<div class="modal fade" id="Basic04_Modal02" tabindex="-1" role="dialog" aria-labelledby="Lable_Basic04_Modal02">
    @using (Ajax.BeginForm("Index", "Basic04", new AjaxOptions { HttpMethod = "POST" }, new { id = "Basic04_Modal02_Form", @class = "form-horizontal" }))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header ">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="Lable_Basic04_Modal02">服務區主檔維護作業-新增</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Basic04_Modal02_Name" class="col-sm-7 col-md-6 col-lg-6 control-label">聯誼區名稱：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <select class="form-control" id="Basic04_Modal02_Name" name="Basic04_Modal02_Name">
                                <option value="">==請選擇==</option>
                                @{
                                    var groups = (IEnumerable<Region>)ViewData["AllRegion"];
                                    foreach (var group in groups)
                                    {
                                        <option value="@group.Code">@group.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Basic04_Modal02_SerName" class="col-sm-7 col-md-6 col-lg-6 control-label">服務區名稱：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic04_Modal02_SerName" name="Basic04_Modal02_SerName"  maxlength="20"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="Basic04_Modal02_btnConfirm" class="btn btn-primary"><i class="fa fa-check-circle" aria-hidden="true"></i> 確 定</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-undo" aria-hidden="true"></i> 取 消</button>
                </div>
            </div>
        </div>
                                    }
</div>
