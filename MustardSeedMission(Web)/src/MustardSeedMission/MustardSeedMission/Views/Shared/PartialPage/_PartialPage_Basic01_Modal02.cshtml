@using MustardSeedMission.Models
<div class="modal fade" id="Basic01_Modal02" tabindex="-1" role="dialog" aria-labelledby="Lable_Basic01_Modal02">
    @using (Ajax.BeginForm("Index", "Basic01", new AjaxOptions { HttpMethod = "POST" }, new { id = "Basic01_Modal02_Form", @class = "form-horizontal" }))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header ">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="Lable_Basic01_Modal02"></h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Basic01_Modal02_txtUid" class="col-sm-7 col-md-6 col-lg-6 control-label">員工帳號：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic01_Modal02_txtUid" name="Basic01_Modal02_txtUid" value="@ViewBag.Basic01_Modal02_Uid" maxlength="50"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Basic01_Modal02_txtName" class="col-sm-7 col-md-6 col-lg-6 control-label">員工姓名：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic01_Modal02_txtName" name="Basic01_Modal02_txtName" value="@ViewBag.Basic01_Modal02_Name" maxlength="50"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Basic01_Modal02_txtPwd" class="col-sm-7 col-md-6 col-lg-6 control-label">員工密碼：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic01_Modal02_txtPwd" name="Basic01_Modal02_txtPwd" value="@ViewBag.Basic01_Modal02_Pwd" maxlength="50"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Basic01_Modal02_Group" class="col-sm-7 col-md-6 col-lg-6 control-label">員工群組：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <select class="form-control" id="Basic01_Modal02_Group" name="Basic01_Modal02_Group">
                                <option value="">==請選擇==</option>
                                @{
                                    var groups = (IEnumerable<Groups>) ViewData["AllGroup"];
                                    foreach (var group  in groups)
                                    {
                                        <option value="@group.GroupId">@group.GroupId</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="submit" value="Basic01_Modal02_btnConfirm" name="action" class="btn btn-primary"><i class="fa fa-check-circle" aria-hidden="true"></i> 確 定</button>*@
                    <button type="button" class="btn btn-primary" id="Basic01_Modal02_btnConfirm"><i class="fa fa-check-circle" aria-hidden="true"></i> 確 定</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-undo" aria-hidden="true"></i> 取 消</button>
                    <input type="hidden" id="mode" name="mode" value="@ViewBag.Mode"/>
                </div>
            </div>
        </div>
    }
</div>
