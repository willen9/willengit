@using MustardSeedMission.Models
<div class="modal fade" id="Basic03_Modal01" tabindex="-1" role="dialog" aria-labelledby="Lable_Basic03_Modal01">
    @using (Ajax.BeginForm("Index", "Basic03", new AjaxOptions { HttpMethod = "POST" }, new { id = "Basic03_Modal01_Form", @class = "form-horizontal" }))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header ">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="Lable_Basic03_Modal01">聯誼區主檔維護作業-查詢</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Basic03_Modal01_SlName" class="col-sm-7 col-md-6 col-lg-6 control-label">聯誼區名稱：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <select class="form-control" id="Basic03_Modal01_SlName" name="Basic03_Modal01_SlName">
                                <option value="">==請選擇==</option>
                                @{
                                    var groups = (IEnumerable<Region>)ViewData["AllRegion"];
                                    if (!string.IsNullOrEmpty(@ViewBag.Basic03_Modal01_SlName))
                                    {
                                        foreach (var group in groups)
                                        {
                                            if (@group.Code.ToString() == @ViewBag.Basic03_Modal01_SlName)
                                            {
                                                <option value="@group.Code" selected="selected">@group.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@group.Code">@group.Name</option>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        foreach (var group in groups)
                                        {
                                            <option value="@group.Code">@group.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Basic03_Modal01_txtCode" class="col-sm-7 col-md-6 col-lg-6 control-label">聯誼區代號：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic03_Modal01_txtCode" name="Basic03_Modal01_txtCode" value="@ViewBag.Basic03_Modal01_Code" maxlength="9"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="Basic03_Modal01_btnConfirm" name="action" value="Basic03_Modal01_btnConfirm" class="btn btn-primary"><i class="fa fa-check-circle" aria-hidden="true"></i> 確 定</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-undo" aria-hidden="true"></i> 取 消</button>
                </div>
            </div>
        </div>
    }
</div>
