<div class="modal fade" id="Basic06_Modal01" tabindex="-1" role="dialog" aria-labelledby="Lable_Basic06_Modal01">
    @using (Ajax.BeginForm("Index", "Basic06", new AjaxOptions { HttpMethod = "POST" }, new { id = "Basic06_Modal01_Form", @class = "form-horizontal" }))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header ">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="Lable_Basic06_Modal01">營業種類主檔維護作業-查詢</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Basic06_Modal01_txtName" class="col-sm-7 col-md-6 col-lg-6 control-label">營業種類名稱：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic06_Modal01_txtName" name="Basic06_Modal01_txtName" value="@ViewBag.Basic06_Modal01_Name" maxlength="30"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Basic06_Modal01_txtCode" class="col-sm-7 col-md-6 col-lg-6 control-label">營業種類代號：</label>
                        <div class="col-sm-15 col-md-16 col-lg-16">
                            <input type="text" class="form-control" id="Basic06_Modal01_txtCode" name="Basic06_Modal01_txtCode" value="@ViewBag.Basic06_Modal01_Code" maxlength="9"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="Basic06_Modal01_btnConfirm" value="Basic06_Modal01_btnConfirm" name="action" class="btn btn-primary"><i class="fa fa-check-circle" aria-hidden="true"></i> 確 定</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-undo" aria-hidden="true"></i> 取 消</button>
                </div>
            </div>
        </div>
    }
</div>


