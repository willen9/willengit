
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrapValidator.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrapValidator.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>歡迎來到貝爾威勒</title>
    <script>
        $(document).ready(function () {
            var height = window.innerHeight;
            var rowheight = $("#form-signin").css("height").replace("px", "");
            $("#form-signin").css("margin-top", parseInt(height / 2 - (rowheight / 2)) - 100 + "px");
        });

        function Check() {
            $("#form-signin").bootstrapValidator({
                fields: {
                    uid: {
                        validators: {
                            notEmpty: {
                                message: "帳號不能為空"
                            }
                        }
                    },
                    pwd: {
                        validators: {
                            notEmpty: {
                                message: "密碼不能為空"
                            }
                        }
                    }
                }
            });
        }
    </script>
</head>
<body style="background-color: lightgray;">
    @if (!string.IsNullOrEmpty(@ViewBag.js))
    {
        <script type="text/javascript">
            $(document).ready(function () {
                $('#btnMsg').click();
            });
        </script>
    }
    <form method="post" action="@Url.Action("SignIn", "Login")" id="form-signin" class="form-horizontal" role="form" style="width: 500px; margin: 0 auto;">
        <div class="form-group">
            <div class="text-center">
                <h1>貝爾威勒標籤管理系統</h1>
            </div>
        </div>
        <div class="form-group" >
            <div class="col-xs-7 col-sm-7 col-md-7 text-right">
                <label for="inputname" class="control-label">帳號：</label>
            </div>
            <div class="col-xs-17 col-sm-17 col-md-17">
                <input type="text" class="form-control" id="inputname" name="uid" placeholder="帳號" autofocus style="width: 250px;" maxlength="50" value="@ViewBag.Uid" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-7 col-sm-7 col-md-7 text-right">
                <label for="inputPassword" class="control-label">密碼：</label>
            </div>
            <div class="col-xs-17 col-sm-17 col-md-17">
                <input type="password" class="form-control" id="inputPassword" name="pwd" placeholder="密碼" style="width: 250px;" maxlength="50" value="@ViewBag.Pwd" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-7 col-xs-offset-7 col-sm-offset-7 col-md-offset-7">
                <button type="submit" class="btn btn-primary" style="width: 100px; margin-left: 150px;" onclick="return Check()">登入</button>
            </div>
        </div>
    </form>
    <button type="button" id="btnMsg" onclick="alert('帳號或密碼錯誤，請重新輸入'); $('#inputname').select();" style="display: none"></button>
</body>
</html>
