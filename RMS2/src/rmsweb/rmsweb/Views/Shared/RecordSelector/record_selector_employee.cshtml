<style type="text/css">
    .record-selector-employee-modal table .actioncolumn {
        width: 50px;
    }

    .record-selector-employee-modal table .EmployeeIdType {
        width: 150px;
    }

    .record-selector-employee-modal table .EmployeeNameTyep {
        width: 200px;
    }

    .record-selector-employee-modal table .DepartmentNameTyep {
        width: 200px;
    }
</style>
<div class='modal fade record-selector-employee-modal' tabindex='-1' id="modal-employee" role='dialog' aria-hidden='true'>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class='modal-title'>員工查詢</h4>
            </div>
            <div class='modal-body'>
                <div class="form-inline">
                    <div class="form-group">
                        <select class="form-control" style="width: 200px; display: inline;" name="addemployeeCol" id="addemployeeCol">
                            <option value="EmployeeId">員工代號</option>
                            <option value="EmployeeName">員工姓名</option>
                            <option value="EmployeeEName">英文姓名</option>
                            <option value="DepartmentId">部門代號</option>
                            <option value="CompanyId">公司代號</option>
                            <option value="Sex">性別</option>
                            <option value="Birthday">生日</option>
                            <option value="DayOfDuty">到職日</option>
                            <option value="OffDutyDate">離職日</option>
                            <option value="IsOff">離職否</option>
                            <option value="TelNo">電話號碼</option>
                            <option value="MobilePhone">手機號碼</option>
                            <option value="Address">通訊地址</option>
                        </select>

                        <select class="form-control" style="width: 100px; display: inline;" name="addemployeeCondition" id="addemployeeCondition">
                            <option value="=">=</option>
                            <option value=">">&gt;</option>
                            <option value=">=">&gt;=</option>
                            <option value="<">&lt;</option>
                            <option value="<=">&lt;=</option>
                            <option value="<>">&lt;&gt;</option>
                            <option value="like%">like%</option>
                            <option value="%like">%like</option>
                            <option value="%like%">%like%</option>
                        </select>
                        <input type="text" class="form-control" id="addemployeeconditionValue" name="addemployeeconditionValue" style="width: 200px; display: inline;" />
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-default" id="btnEmployeeSearch" style="display: inline;" ng-click="SearchEmployee()">查詢</button>
                    </div>
                </div>
            </div>
                <div id="divEmployeeGrid" style="height: 500px;overflow-y: auto;">
                    <table class="table table-striped table-hover table-condensed" data-swhgajax="true" data-swhgcontainer="divEmployeeGrid" data-swhgcallback="">
                        <thead>
                            <tr>
                                <th scope="col">
                                    選擇
                                </th>
                                <th scope="col">
                                    員工代號
                                </th>
                                <th scope="col">
                                    員工姓名
                                </th>
                                <th scope="col">
                                    部門
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in Employee">
                                <td class='column-one-action'><a data-dismiss='modal' onclick='SelectDepartment(this)' href="#">選擇</a></td>
                                <td class='DepartmentIdType'>{{ item.EmployeeId }}</td>
                                <td class='DepartmentNameType'>{{ item.EmployeeName }}</td>
                                <td class='RemarkType'>{{ item.DepartmentName }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <input type="hidden" id="EmployeePage" name="EmployeePage" value="" />
                </div>
            </div>
        </div>
    </div>
</div>
