<style type="text/css">
    .record-selector-customeraddress-modal table .actioncolumn {
        width: 50px;
    }

    .record-selector-customeraddress-modal table .AddressIdType {
        width: 150px;
    }

    .record-selector-customeraddress-modal table .AddressSNameType {
        width: 200px;
    }

    .record-selector-customeraddress-modal table .AddressType {
        width: 150px;
    }

    .record-selector-customeraddress-modal table .ContactType {
        width: 150px;
    }

    .record-selector-customeraddress-modal table .TelNoType {
        width: 150px;
    }

    .record-selector-customeraddress-modal table .FaxNoType {
        width: 150px;
    }

    .record-selector-customeraddress-modal table .RemarkType {
        width: 150px;
    }
</style>
<div class='modal fade record-selector-customeraddress-modal' tabindex='-1' role='dialog' aria-hidden='true'>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class='modal-title'>地址查詢</h4>
            </div>
            <div class='modal-body'>
                <div class="form-inline">
                    <div class="form-group">
                        <select class="form-control" style="width: 200px; display: inline;" name="addAddress_Col" id="addAddress_Col">
                            <option value="AddressId">地址代號</option>
                            <option value="AddressSName">地址簡稱</option>
                            <option value="Address">地址</option>
                            <option value="Remark">備註</option>
                            <option value="Contact">聯絡人</option>
                            <option value="TelNo">電話</option>
                            <option value="FaxNo">傳真</option>
                        </select>

                        <select class="form-control" style="width: 100px; display: inline;" name="addAddress_Condition" id="addAddress_Condition">
                            <option value="=">=</option>
                            <option value=">">&gt;</option>
                            <option value=">=">&gt;=</option>
                            <option value="<">&lt;</option>
                            <option value="<=">&lt;=</option>
                            <option value="<>">&lt;&gt;</option>
                            <option value="like%">like%</option>
                            <option value="%like">%like</option>
                            <option value="%like%">%like%</option>
                        </select>
                        <input type="text" class="form-control" id="addAddress_conditionValue" name="addAddress_conditionValue" style="width: 200px; display: inline;" />
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-default" id="btnAddressInfo" style="display: inline;">查詢</button>
                    </div>
                </div>
            </div>
                <div id="divCustomerAddressGrid" style="height: 500px;overflow-y: auto;">
                    @*<table class="table table-striped table-hover table-condensed table-header-fixed" data-swhgajax="true" data-swhgcontainer="divCustomerAddressGrid" data-swhgcallback="">*@
                    <table class="table table-striped table-hover table-condensed" data-swhgajax="true" data-swhgcontainer="divCustomerAddressGrid" data-swhgcallback="">
                        <thead>
                            <tr>
                                <th scope="col">
                                    選擇
                                </th>
                                <th scope="col">
                                    地址代號
                                </th>
                                <th scope="col">
                                    地址簡稱
                                </th>
                                <th scope="col">
                                    地址
                                </th>
                                <th scope="col">
                                    聯絡人
                                </th>
                                <th scope="col">
                                    電話
                                </th>
                                <th scope="col">
                                    傳真
                                </th>
                                <th scope="col">
                                    備註
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <input type="hidden" id="CustomerAddressPage" name="CustomerAddressPage" value="" />
                </div>
            </div>
        </div>
    </div>
</div>
