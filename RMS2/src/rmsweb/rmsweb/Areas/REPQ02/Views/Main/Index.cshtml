                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <canvas id="chart02" width="400" height="300"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <script>
             var ctx = document.getElementById("chart01");
        var labelsName = new Array();
        var data01 = new Array();
        var data02 = new Array();
        $.ajax({
            url: '@Url.Action("SearchPartLifetime", "Main")',
            type: "POST",
            datatype: 'JSON',
            async: false,
            contentType: 'application/json; charset=utf-8',
            success: function (doc) {
                var Maintain = eval(doc);
                if (Maintain.length > 0)
                {
                    for (var i = 0; i < Maintain.length; i++) {
                        labelsName[i] = Maintain[i].ProductNo
                        data01[i] = Maintain[i].RGANum
                        data02[i] = Maintain[i].PartNume
                    };
                }
            }
        })
        var test = ["1", "2", "3"];
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelsName,
                datasets: [{
                    type: 'bar',
                    label: '銷售台數',
                    data: data01,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 99, 132, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)'
                    ],
                    borderWidth: 1
                },
                {
                    type: 'bar',
                    label: '合約台數',
                    data: data02,
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(54, 162, 235, 0.2)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(54, 162, 235, 1)'
                    ],
                    borderWidth: 1
                }
               ]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
            </script>
            <script>
