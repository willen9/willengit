                    type: "POST",
                    datatype: 'JSON',
                    async: false,
                    contentType: 'application/json; charset=utf-8',
                    success: function (doc) {
                        var Maintain = eval(doc);
                        if (Maintain.length > 0) {
                            for (var i = 0; i < Maintain.length; i++) {
                                labelsName[i] = Maintain[i].ProductNo
