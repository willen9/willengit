<section class="content-header">
    <h1>報價單維護</h1>
</section>
<section class="content">
@using (Ajax.BeginForm("Index", "Main", FormMethod.Post, new AjaxOptions { UpdateTargetId = "DivGrid" }))
{
    <div class="toolbar-container">
        <a class="btn btn-primary" href="@Url.Action("CUR", "Main", null)"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新增</a>
        <button type="submit" class="btn btn-primary" id="btnExport" name="action" value="btnExport" aria-label="Left Align">
            <span class="glyphicon glyphicon-export" aria-hidden="true"></span> 匯出
        </button>
    </div>
}
@using (Ajax.BeginForm("Index", "Main", FormMethod.Post, new AjaxOptions { UpdateTargetId = "DivGrid" }))
{
    <div class="basic-search-container form-horizontal">
        <div class="form-group">
            <div class="col-sm-20">
                <label for="id_quotationno" class="control-label">單號</label>
                <select class="form-control" style="width: 100px;display:inline;" name="selCond1">
                    @if (ViewBag.selCond1 == "=")
                    {
                        <option value="=" selected>=</option>
                    }
                    else
                    {
                        <option value="=">=</option>
                    }
                    @if (ViewBag.selCond1 == ">")
                    {
                        <option value=">" selected>></option>
                    }
                    else
                    {
                        <option value=">">></option>
                    }
                    @if (ViewBag.selCond1 == ">=")
                    {
                        <option value=">=" selected>>=</option>
                    }
                    else
                    {
                        <option value=">=">>=</option>
                    }
                    @if (ViewBag.selCond1 == "<")
                    {
                        <option value="<" selected><</option>
                    }
                    else
                    {
                        <option value="<"><</option>
                    }
                    @if (ViewBag.selCond1 == ">")
                    {
                        <option value=">" selected>></option>
                    }
                    else
                    {
                        <option value=">">></option>
                    }
                    @if (ViewBag.selCond1 == ">=")
                    {
                        <option value=">=" selected>>=</option>
                    }
                    else
                    {
                        <option value=">=">>=</option>
                    }
                    @if (ViewBag.selCond1 == "<>")
                    {
                        <option value="<>" selected>≠</option>
                    }
                    else
                    {
                        <option value="<>">≠</option>
                    }
                    @if (ViewBag.selCond1 == "like%")
                    {
                        <option value="like%" selected>like%</option>
                    }
                    else
                    {
                        <option value="like%">like%</option>
                    }
                    @if (ViewBag.selCond1 == "%like")
                    {
                        <option value="%like" selected>%like</option>
                    }
                    else
                    {
                        <option value="%like">%like</option>
                    }
                    @if (ViewBag.selCond1 == "%like%")
                    {
                        <option value="%like%" selected>%like%</option>
                    }
                    else
                    {
                        <option value="%like%">%like%</option>
                    }
                </select>
                <input type="text" class="form-control" id="id_quotationno" name="quotationno" style="width:200px;display:inline;" value="@ViewBag.quotationno" />
                <label for="id_customerid" class="control-label">客戶代號</label>
                <select class="form-control" style="width: 100px;display:inline;" name="selCond2">
                    @if (ViewBag.selCond2 == "=")
                    {
                        <option value="=" selected>=</option>
                    }
                    else
                    {
                        <option value="=">=</option>
                    }
                    @if (ViewBag.selCond2 == ">")
                    {
                        <option value=">" selected>></option>
                    }
                    else
                    {
                        <option value=">">></option>
                    }
                    @if (ViewBag.selCond2 == ">=")
                    {
                        <option value=">=" selected>>=</option>
                    }
                    else
                    {
                        <option value=">=">>=</option>
                    }
                    @if (ViewBag.selCond2 == "<")
                    {
                        <option value="<" selected><</option>
                    }
                    else
                    {
                        <option value="<"><</option>
                    }
                    @if (ViewBag.selCond2 == ">")
                    {
                        <option value=">" selected>></option>
                    }
                    else
                    {
                        <option value=">">></option>
                    }
                    @if (ViewBag.selCond2 == ">=")
                    {
                        <option value=">=" selected>>=</option>
                    }
                    else
                    {
                        <option value=">=">>=</option>
                    }
                    @if (ViewBag.selCond2 == "<>")
                    {
                        <option value="<>" selected>≠</option>
                    }
                    else
                    {
                        <option value="<>">≠</option>
                    }
                    @if (ViewBag.selCond2 == "like%")
                    {
                        <option value="like%" selected>like%</option>
                    }
                    else
                    {
                        <option value="like%">like%</option>
                    }
                    @if (ViewBag.selCond2 == "%like")
                    {
                        <option value="%like" selected>%like</option>
                    }
                    else
                    {
                        <option value="%like">%like</option>
                    }
                    @if (ViewBag.selCond2 == "%like%")
                    {
                        <option value="%like%" selected>%like%</option>
                    }
                    else
                    {
                        <option value="%like%">%like%</option>
                    }
                </select>
                <input type="text" class="form-control" id="id_customerid" name="customerid" style="width:200px;display:inline;" value="@ViewBag.customerid">
                <button type="submit" class="btn btn-default" id="btnSearch" name="action" value="btnSearch" aria-label="Left Align" style="display: inline-block;">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-link" aria-label="Left Align" data-toggle="modal" data-target=".advanced-search-modal" style="display: inline-block;">
                    進階查詢
                </button>
            </div>
            
        </div>
    </div>
    var grid = new WebGrid(source: (IEnumerable<BusinessLayer.Models.Quotation_H>)ViewData["Quotation_H"], canPage: false, canSort: true, ajaxUpdateContainerId: "divGrid");


    @grid.GetHtml(
            tableStyle: "table table-striped table-hover rms-table seri10-table",
        columns: grid.Columns(
                grid.Column(columnName: "", header: "動作", style: "column-three-actions", format: @<text>
                <a href="@Url.Action("Edit", "Main", new { QuotationType = @item.QuotationType, QuotationNo = @item.QuotationNo})">編輯</a>
                <a href="#" onclick="deleteInfo('@Url.Action("Delete", "Main", new {  QuotationType = @item.QuotationType, QuotationNo = @item.QuotationNo })','@item.QuotationType - @item.QuotationNo')">刪除</a>
                 <a href="@Url.Action("Print", "Main", new { QuotationType = @item.QuotationType, QuotationNo = @item.QuotationNo})">列印</a>
            </text>, canSort: false),
        grid.Column(columnName: "QuotationType", header: "報價單別", style: "QuotationType"),
        grid.Column(columnName: "OrderSName", header: "單據名稱", style: "OrderSName"),
        grid.Column(columnName: "QuotationNo", header: "報價單號", style: "QuotationNo", format:
        @<text>
            <a href="@Url.Action("Details", "Main", new {  QuotationType = @item.QuotationType, QuotationNo = @item.QuotationNo})">@item.QuotationNo</a>
        </text>),
        grid.Column(columnName: "CustomerName", header: "客戶", style: "CustomerName"),
        grid.Column(columnName: "ProductNo", header: "品號", style: "ProductNo"),
        grid.Column(columnName: "ProductName", header: "品名", style: "ProductName"),
        grid.Column(columnName: "SerialNo", header: "序號", style: "SerialNo"),
        grid.Column(columnName: "StatusCode", header: "報價狀態", style: "StatusCode"),
        grid.Column(columnName: "StatusOfResponse", header: "回復狀態", style: "StatusOfResponse"),
        grid.Column(columnName: "CreatorName", header: "報價人員", style: "CreatorName"),
        grid.Column(columnName: "TaxExcluded", header: "報價金額", style: "TaxExcluded"),
        grid.Column(columnName: "SourceOrderType", header: "來源單別", style: "SourceOrderType"),
        grid.Column(columnName: "SourceOrderNo", header: "來源單號", style: "SourceOrderNo")
        )
        )
    <p style="color: red;">@ViewBag.Msg</p>
    @RenderPage("~/Areas/SERI10/Views/Shared/advanced-search-modal.cshtml")
}
</section>
