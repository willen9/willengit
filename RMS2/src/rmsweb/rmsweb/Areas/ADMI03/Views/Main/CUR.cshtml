<section class="content-header">
    <h1>使用者權限維護</h1>
</section>
<section class="content">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-pencil fa-fw"></i> Application</div>
        <div class="panel-body">
            <form id="from-Position_H" method="post" action="@Url.Action("CUR", "Main")">
                <div class="row">
                    <div class="form-group">
                        <label for="id_EmployeeNo" class="col-md-3 col-lg-3 control-label">員工代號</label>
                        <div class="col-md-5 col-lg-5">
                            <div class="input-group">
                                <input type="text" class="form-control" id="EmployeeNo" name="EmployeeNo" value="@ViewBag.EmployeeNo" maxlength="4" tabindex="1" />
                                <span class="input-group-addon" id="btnProductNo" style="cursor:pointer;"><span class="fa fa-hand-pointer-o"></span></span>
                            </div>
                        </div>
                        <label for="id_currencyId" class="col-md-3 col-lg-3 control-label">員工姓名</label>
                        <div class="col-md-5 col-lg-5">
                            <input type="text" class="form-control" id="id_currencyId" name="currencyId" value="@ViewBag.CurrencyId" maxlength="4" tabindex="1" />
                        </div>
                        <label for="id_currencyId" class="col-md-3 col-lg-3 control-label">英文姓名</label>
                        <div class="col-md-3 col-lg-3">
                            <input type="text" class="form-control" id="id_currencyId" name="currencyId" value="@ViewBag.CurrencyId" maxlength="4" tabindex="1" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label for="id_Company" class="col-md-3 col-lg-3 control-label">公司別</label>
                        <div class="col-md-5 col-lg-5">
                            <input type="text" class="form-control" id="Company" name="Company" value="@ViewBag.Company" maxlength=" 40" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="id_DeptId" class="col-md-3 col-lg-3 control-label">部門別</label>
                        <div class="col-md-5 col-lg-5">
                            <input type="text" class="form-control" id="DeptId" name="DeptId" value="@ViewBag.DeptId" maxlength=" 12" />
                        </div>
                    </div>
                </div>

                <h5>權限明細</h5>
                <hr />
                    
                <div class="text-right">
                    <button type="submit" class="btn btn-primary" name="action" value="btnSaveNew" tabindex="5">存檔</button>
                    <button type="submit" class="btn btn-primary" name="action" value="btnNextNew" tabindex="6">存檔並新增</button>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Main", null)" tabindex="7">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</section>