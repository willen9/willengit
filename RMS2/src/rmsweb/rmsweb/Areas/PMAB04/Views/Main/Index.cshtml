        var grid = new WebGrid(source: (IEnumerable<BusinessLayer.Models.RoutineService_H>)ViewData["RoutineService_H"], canPage: false, canSort: false, ajaxUpdateContainerId: "divGrid");

        @grid.GetHtml(
                 tableStyle: "table table-striped table-hover rms-table suoi08-table",
            columns: grid.Columns(
                     grid.Column(header: "動作", style: "column-two-actions", format: @<text>
                    <a href="@Url.Action("Edit", "Main", new { Area = "PMAI04", RoutineSerOrderType = @item.RoutineSerOrderType, RoutineSerOrderNo = @item.RoutineSerOrderNo })">編輯</a>
                    <a href="@Url.Action("Print", "Main", new { Area = "PMAI04", RoutineSerOrderType = @item.RoutineSerOrderType, RoutineSerOrderNo = @item.RoutineSerOrderNo })">列印</a>
                    </text>, canSort: false),
                grid.Column(columnName: "RoutineSerOrderType", header: "單別", style: "RoutineSerOrderType"),
                grid.Column(columnName: "RoutineSerOrderNo", header: "單號", style: "RoutineSerOrderNo", format:@<text><a href="@Url.Action("Details", "Main", new { Area = "PMAI04", RoutineSerOrderType = @item.RoutineSerOrderType, RoutineSerOrderNo = @item.RoutineSerOrderNo })">@item.RoutineSerOrderNo</a> </text>),
                grid.Column(columnName: "CustomerName", header: "客戶名稱", style: "CustomerName",
                    format: @<text>
                    <a href="@Url.Action("CUR", "Main", new { Area = "CMSI09", id = @item.CustomerId, type = "Detail" })">@item.CustomerName</a>
                    </text>),
                grid.Column(columnName: "Confirmed", header: "狀態", style: "Confirmed"),
                grid.Column(columnName: "AssignCheck", header: "派工碼", style: "AssignCheck")
