                    </select>
                    <input type="text" class="form-control" id="id_supportaplorderno" name="supportaplorderno" style="width:160px;display:inline;" value="@ViewBag.SupportAplOrderNo" tabindex="1"/>
                    <label for="id_customerid" class="control-label">客戶代號</label>
