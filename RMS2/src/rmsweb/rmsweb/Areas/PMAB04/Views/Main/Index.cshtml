                        }
                        else
                        {
                            <option value="%like%">%like%</option>
                        }
                    </select>
                    <input type="text" class="form-control" id="id_customerid" name="customerid" style="width:160px;display:inline;" value="@ViewBag.CustomerId" tabindex="2">
                    <label for="id_dealman" class="control-label">處理人員</label>
