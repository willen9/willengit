<section class="content-header">
    <h1>交易幣別資料維護</h1>
</section>
<section class="content">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-pencil fa-fw"></i> Application</div>
        <div class="panel-body">
            <div class="container-fluid">
                <div class="row">
                    <form id="from-Position_H" method="post" action="@Url.Action("CUR", "Main")">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="id_currencyId" class="col-md-3 col-lg-2 control-label">職務代號</label>
                                <div class="col-md-21 col-lg-22">
                                        <input type="text" class="form-control" id="id_currencyId" name="currencyId" value="@ViewBag.CurrencyId" maxlength="4" tabindex="1" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="id_Position" class="col-md-3 col-lg-2 control-label">職務名稱</label>
                                <div class="col-md-21 col-lg-22">
                                    <input type="text" class="form-control" id="Position" name="Position" value="@ViewBag.Position" maxlength="40"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="id_PositionCategory" class="col-md-3 col-lg-2 control-label">職務分類</label>
                                <div class="col-md-21 col-lg-22">
                                    <select class="form-control" name="PositionCategory"></select>
                                </div>
                                <div class="form-group">
                                    <label for="id_Remark" class="col-md-3 col-lg-2 control-label">備註</label>
                                    <div class="col-md-21 col-lg-22">
                                        <textarea class="form-control" id="id_Remark" name="Remark" cols="40" rows="5" maxlength="255" readonly>@ViewBag.Remark</textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary" name="action" value="btnSaveNew" tabindex="5">存檔</button>
                                <button type="submit" class="btn btn-primary" name="action" value="btnNextNew" tabindex="6">存檔並新增</button>
                                <a class="btn btn-primary" href="@Url.Action("Index", "Main", null)" tabindex="7">返回列表</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>