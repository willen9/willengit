<div class='modal fade QuestionList_D-modal' tabindex='-1' role='dialog' aria-hidden='true'>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h4 class='modal-title'>地址新增</h4>
            </div>
            <div class='modal-body'>
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="id_QuestionList_DRemark" class="control-label col-sm-4">地址簡稱</label>
                        <div class="col-sm-20">
                            <input type="text" class="form-control" id="id_txtAddressSName" name="txtAddressSName" maxlength="255" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="id_QuestionList_DRemark" class="control-label col-sm-4">地址</label>
                        <div class="col-sm-20">
                            <input type="text" class="form-control" id="id_txtAddress" name="txtAddress" maxlength="255"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="id_QuestionList_DRemark" class="control-label col-sm-4">聯絡人</label>
                        <div class="col-sm-20">
                            <input type="text" class="form-control" id="id_txtContact" name="txtContact" maxlength="60"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="id_QuestionList_DRemark" class="control-label col-sm-4">電話</label>
                        <div class="col-sm-20">
                            <input type="text" class="form-control" id="id_txtTelNo" name="txtTelNo" maxlength="60"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="id_QuestionList_DRemark" class="control-label col-sm-4">傳真</label>
                        <div class="col-sm-20">
                            <input type="text" class="form-control" id="id_txtFaxNo" name="txtFaxNo" maxlength="60"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="id_QuestionList_DRemark" class="control-label col-sm-4">備註</label>
                        <div class="col-sm-20">
                            <textarea class="form-control" id="id_txtRemark" name="txtRemark" cols="40" rows="5" maxlength="255"></textarea>
                        </div>
                    </div>
                </form>
            </div>
                
            <div class='modal-footer'>
                <button type="button" class="btn btn-default" name="action" value="btnAllot" onclick="check()">確定</button>
                <button type='button' class='btn btn-default' data-dismiss='modal'>取消</button>
            </div>
        </div>
    </div>
</div>

